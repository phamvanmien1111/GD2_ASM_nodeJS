<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="col-span-1 bg-white p-6 rounded-lg shadow-md h-[700px]">
    <h1 class="text-2xl font-bold mb-4">Thông Tin Cá Nhân</h1>
  <div class="space-y-4">
    <div class="flex justify-center">
        <div>
            <img src="{{profile.Avatar}}" alt="Avatar" class="w-24 h-24 bg-gray-300 rounded-full">
        </div>
    </div>
    <div>
        <label class="block text-gray-700 font-medium mb-2">Tên</label>
        <p id="name" class="bg-gray-100 p-2 rounded-lg">{{profile.Username}}</p>
    </div>
    <div>
        <label class="block text-gray-700 font-medium mb-2">Email</label>
        <p id="email" class="bg-gray-100 p-2 rounded-lg">{{profile.Email}}</p>
    </div>
    <div>
        <label class="block text-gray-700 font-medium mb-2">Số điện thoại</label>
        <p id="phone" class="bg-gray-100 p-2 rounded-lg">{{profile.phone}}</p>
    </div>
    <div>
        <label class="block text-gray-700 font-medium mb-2">Địa chỉ</label>
        <p id="address" class="bg-gray-100 p-2 rounded-lg">{{profile.Location}}</p>
    </div>
    <div>
        <label class="block text-gray-700 font-medium mb-2">Tiểu sử</label>
        <p id="bio" class="bg-gray-100 p-2 rounded-lg">{{profile.Bio}}</p>
    </div>
</div>
<a href="/profileMe/edit" class="bg-blue-500 text-white w-full py-2 rounded-lg hover:bg-blue-600 mt-6 block text-center">
    Cập Nhật Thông Tin
</a>
</div>
 <div class="col-span-2 space-y-6 w-[800px] ">
<div class="space-y-6">
  {{#each posts}}
    <div class="bg-white p-6 rounded-lg shadow-md">
      <div class="flex items-center mb-4">
        
        <img src="{{#if Avatar}}{{Avatar}}{{else}}/images/default-avatar.jpg{{/if}}" class="rounded-full w-12 h-12">
        
        <div class="ml-3">
          {{#if FirstName}} {{FirstName}} {{LastName}} {{else}} Người dùng ẩn danh {{/if}}
         <p class="text-sm text-gray-500">{{CreatedAt}}</p>
        </div>

      </div>
            <a href="/profile/editPost/{{PostID}}">
          <i class="fa-solid fa-sliders ml-[700px]"></i>
      </a>
      <p class="mb-4">{{Content}}</p>
      {{#if ImageURL}}
        <img src="/images/{{ImageURL}}" alt="Post Image" class="mt-4 w-full max-w-lg bg-gray-300 h-auto rounded-lg">
      {{else}}
        <p class="text-gray-500">Không có ảnh.</p>
      {{/if}}
      <div class="mt-4 flex space-x-4">
        <button class="flex items-center space-x-2 text-gray-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
          </svg>
          <span>Like</span>
        </button>
        <button class="flex items-center space-x-2 text-gray-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123A7.962 7.962 0 012 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9z" clip-rule="evenodd" />
          </svg>
          <span>Bình luận</span>
        </button>
        <button class="flex items-center space-x-2 text-gray-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z" />
          </svg>
          <span>Chia sẻ</span>
        </button>
      </div>
    </div>
  {{else}}
    <p class="text-gray-500 text-center">Không có bài viết nào.</p>
  {{/each}}
</div>

<div id="editModal" class="fixed inset-0 flex justify-content: flex-center bg-black bg-opacity-50 hidden justify-center items-center">
    <div class="bg-white p-6 rounded-lg w-[600px]">
        <h2 class="text-xl font-bold mb-4">Chỉnh sửa bài viết</h2>
        <form id="editForm">
            <div class="mb-4">
                <label class="block text-gray-700 font-medium mb-2">Nội dung</label>
                <textarea id="editContent" class="w-full p-2 border rounded-lg" rows="4">Ngày tết sung vầy cùng với gia đình cầu mong mọi người được hạnh phúc sung vầy.</textarea>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 font-medium mb-2">Ảnh</label>
                <input type="file" id="editImage" class="w-full p-2 border rounded-lg">
            </div>
            <div class="flex justify-end space-x-2">
                <button type="button" id="closeModalBtn1" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">
                    Đóng
                </button>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                    Lưu
                </button>
            </div>
        </form>
    </div>
</div>
      </div>
    </div>
  </div>
</body>
<script src="../js/module/profileMe.js"></script>